<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo" />
    <EditText
        android:layout_below="@id/logo"
        android:layout_marginTop="50dp"
        android:layout_width="350dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/edmaHoaDon"
        android:hint="Mã Hoá đơn"
        android:textSize="18sp"/>
<EditText
    android:layout_below="@id/edmaHoaDon"
    android:layout_marginTop="20dp"
    android:layout_width="250dp"
    android:layout_marginLeft="20dp"
    android:layout_height="wrap_content"
    android:id="@+id/edNgayMua"
    android:hint="DD-MM-YYYY"
    android:textSize="18sp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/picDate"
        android:layout_below="@id/edmaHoaDon"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/edNgayMua"
        android:onClick="datePicker"
        android:text="Pick"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/edNgayMua"
        android:text="Thêm Hoá đơn"
        android:onClick="ADDHoaDon"/>

</RelativeLayout>